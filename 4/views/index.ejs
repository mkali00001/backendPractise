<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input name="taskName" class="block outline-none w-full rounded-md px-5 py-2 bg-zinc-800 " type="text"
                    placeholder="Title goes here...">
                <textarea name="taskDesc"
                    class="block outline-none w-full rounded-md mt-2 px-5 py-2 bg-zinc-800 resize-none" name="" id=""
                    placeholder="write your task detail here..."></textarea>
                <input
                    class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer hover:bg-blue-900 transition-transform hover:scale-110"
                    type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3">
            <%if(files.length> 0){%>
                <%files.forEach((file)=>{%>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%=file%>
                        </h1>
                        <div class="mt-3 flex justify-between">
                            <a href="/files/<%=file%>" class="text-blue-500 inline-block">Read More</a>
                            <a href="/edit/<%=file%>" class="text-green-500 inline-block">Edit File Name</a>
                        </div>
                    </div>
                    <%})%>
                        <%}else{%>
                            <div>
                                <h3 class="text-zinc-500">No Task Yet!</h3>
                            </div>
                            <%}%>
        </div>
    </div>
</body>

</html>