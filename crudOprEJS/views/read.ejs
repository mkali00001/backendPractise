<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a href="/" class="text-blue-500">Home</a>
        <h1 class="text-3xl tracking-tighter mb-3 mt-10">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <%if(users.length > 0){%>
                <%users.forEach((user)=>{%>
                    <div class="bg-zinc-800 w-72 max-w-72 rounded-md p-4">
                        <div class="w-full h-62 rounded-md bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%=user.imageUrl%>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tighter mt-3"><%=user.name%></h3>
                        <h5 class="text-zinc-500"><%=user.email%></h5>
                        <div class="mt-3 flex justify-between">
                            <a href="/edit/<%= user._id%>" class="text-zinc-400">Edit User</a>
                            <a href="/delete/<%=user._id%>" class="text-red-500">Delete User</a>
                        </div>
                    </div> 
                <%})%>
            <%}else{%>
                <p>No Users Found!</p>
            <%}%>
        </div>
    </div>
</body>

</html>